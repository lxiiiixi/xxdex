{
  "extends": "@xxdex/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "*": [
        "./src/*"
      ],
      "@xxdex/uikit": [
        "../../packages/uikit/src/index.ts"
      ],
      "@xxdex/uikit/*": [
        "../../packages/uikit/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/config/abi/types/",
    "**/abis/types/*.ts"
  ],
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
